<Window x:Class="tEditor.pCreate"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:tEditor"
        mc:Ignorable="d"
        Title="pCreate" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="120"/>
            <RowDefinition Height="250"/>
            <RowDefinition Height="120"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="120"/>
            <ColumnDefinition Width="500"/>
            <ColumnDefinition Width="120"/>
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Column="1" HorizontalAlignment="Left" Margin="119.667,45,0,0" Grid.Row="1" TextWrapping="Wrap" Text="Solution Name" VerticalAlignment="Top"/>
        <TextBlock Grid.Column="1" HorizontalAlignment="Left" Margin="119.667,81,0,0" Grid.Row="1" TextWrapping="Wrap" Text="Application Name" VerticalAlignment="Top"/>
        <TextBlock Grid.Column="1" HorizontalAlignment="Left" Margin="119.667,116,0,0" Grid.Row="1" TextWrapping="Wrap" Text="Language Choice" VerticalAlignment="Top"/>
        <TextBox Grid.Column="1" HorizontalAlignment="Left" Height="23" Margin="239.667,47,0,0" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox Grid.Column="1" HorizontalAlignment="Left" Height="23" Margin="239.667,80,0,0" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Canvas Grid.Column="1" Grid.Row="1">
            <RadioButton Content="C++" Grid.Column="1" HorizontalAlignment="Left" Margin="239.667,120,0,0" Grid.Row="1" VerticalAlignment="Top"/>
            <RadioButton Content="Java" Grid.Column="1" HorizontalAlignment="Left" Margin="287.667,120,0,0" Grid.Row="1" VerticalAlignment="Top"/>
            <RadioButton Content="Python" Grid.Column="1" HorizontalAlignment="Left" Margin="333.667,120,0,0" Grid.Row="1" VerticalAlignment="Top"/>

        </Canvas>
        
       
        <TextBlock Grid.Column="1" HorizontalAlignment="Left" Margin="119.667,155,0,0" Grid.Row="1" TextWrapping="Wrap" Text="Save Location" VerticalAlignment="Top"/>
        <RadioButton Content="Desktop" Grid.Column="1" HorizontalAlignment="Left" Margin="240.667,158,0,0" Grid.Row="1" VerticalAlignment="Top" IsChecked="True"/>
        <RadioButton x:Name="other" Content="Other" Grid.Column="1" HorizontalAlignment="Left" Margin="327.667,158,0,0" Grid.Row="1" VerticalAlignment="Top" Checked="RadioButton_Checked"/>
        <TextBox x:Name="otherTb" Grid.Column="1" HorizontalAlignment="Left" Height="23" Margin="119.667,219,0,0" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Top" Width="auto"/>
        <Button Content="Create" Grid.Column="2" HorizontalAlignment="Left" Margin="0.333,222,0,0" Grid.Row="1" VerticalAlignment="Top" Width="75"/>
    </Grid>
</Window>
